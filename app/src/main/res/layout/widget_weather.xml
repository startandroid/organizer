<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="12.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime" />

    <TextView
        android:id="@+id/tvDay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="13.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDay1" />

    <TextView
        android:id="@+id/tvDay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="14.07"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@+id/tvDay2"
        app:layout_constraintTop_toBottomOf="@+id/tvDay2" />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Moscow"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTempMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="22&#176;"
        android:textSize="@dimen/text_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hyphen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tvDay1"
        app:layout_constraintStart_toEndOf="@+id/tvDay1"
        app:layout_constraintTop_toTopOf="@+id/tvDay1" />

    <TextView
        android:id="@+id/hyphen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tvDay2"
        app:layout_constraintStart_toEndOf="@+id/tvDay2"
        app:layout_constraintTop_toTopOf="@+id/tvDay2" />

    <TextView
        android:id="@+id/hyphen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tvDay3"
        app:layout_constraintStart_toEndOf="@+id/tvDay3"
        app:layout_constraintTop_toTopOf="@+id/tvDay3" />

    <TextView
        android:id="@+id/tvTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:text="23&#176;"
        app:layout_constraintBottom_toBottomOf="@+id/hyphen1"
        app:layout_constraintStart_toEndOf="@+id/hyphen1"
        app:layout_constraintTop_toTopOf="@+id/hyphen1" />

    <TextView
        android:id="@+id/tvTemp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:text="20&#176;"
        app:layout_constraintBottom_toBottomOf="@+id/hyphen2"
        app:layout_constraintStart_toEndOf="@+id/hyphen2"
        app:layout_constraintTop_toTopOf="@+id/hyphen2" />

    <TextView
        android:id="@+id/tvTemp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:text="11&#176;"
        app:layout_constraintBottom_toBottomOf="@+id/hyphen3"
        app:layout_constraintStart_toEndOf="@+id/hyphen3"
        app:layout_constraintTop_toTopOf="@+id/hyphen3" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11:00"
        android:textSize="@dimen/text_average"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/city_name"
        app:layout_constraintTop_toBottomOf="@+id/city_name" />
</androidx.constraintlayout.widget.ConstraintLayout>